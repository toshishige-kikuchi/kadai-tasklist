<% if logged_in? %>
  <h1>Task一覧</h1>
  
  <table class="table table-striped">
    <thead>
      <tr>
        <th>id</th>
        <th>Task</th>
        <th>status</th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
        <% if current_user == task.user %>
          <tr>
            <td><%= link_to task.id, task %></td>
            <td><%= task.content %></td>
            <td><%= task.status %></td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
    <div>
      <%= paginate @tasks %>
    </div>
  </table>
  <%= link_to '新しいTaskを追加する', new_task_path, class: "mb-5 btn btn-primary" %>
<% end %>
